<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="Comment">

	<select id="commentCount" resultType="int">
		SELECT COUNT(*) FROM comments
	</select>

	<select id="commentList" resultType="dream.tk.dto.StoreCommentDTO">
		SELECT *
		FROM COMMENTS
		where BNO = ${bno}
	</select>




	<insert id="commentInsert">
		INSERT INTO
		comments 
		VALUES(cno_seq.nextval,${bno},#{content},#{writer}, sysdate)
	</insert>

	<update id="commentUpdate"
		parameterType="dream.tk.dto.StoreCommentDTO">
		UPDATE comments SET CONTENT = #{content} WHERE CNO = ${cno}
	</update>

	<delete id="commentDelete" parameterType="int">
		DELETE FROM comments WHERE CNO = ${cno}
	</delete>
</mapper>
 

