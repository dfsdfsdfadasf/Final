<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="aMember">

	<select id="preExist" resultType="int">
		select count(*) from
		admin_premember where emp_id=#{emp_id} and name=#{name}
	</select>

	<insert id="insert">
		insert into admin_member values(admin_member_seq.nextval,
		#{emp_id}, #{pw}, #{email}, #{name}, sysdate)
	</insert>

	<update id="update">
		update admin_member set pw=#{pw},
		email=#{email}, name=#{name}, reg_date=sysdate 
		where emp_id=${emp_id}
	</update>

	<delete id="delete">
		delete from admin_member where emp_id=#{value}
	</delete>

	<select id="login" resultType="int">
		select count(*) from admin_member
		where emp_id=#{emp_id} and pw=#{pw}
	</select>

	<select id="getInfo" resultType="dream.tk.dto.AdminMemberDTO">
		select * from admin_member where
		emp_id=#{value};
	</select>

</mapper>