<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="like">
  	
  	<!-- 찜하기 리스트 뽑기 -->
  	<select id="selectAll" parameterType="dream.tk.dto.likeDTO">
		select * from likeVo where id = #{id}
  	</select>

  	<!-- 찜하기 등록 기능 -->
  	<insert id="insert" parameterType="dream.tk.dto.likeDTO">
		insert into likeVO values ( ${id} , #{bno} , 'Y')
	</insert>
 	
 	<!-- 찜하기 취소 기능 -->
 	<delete id="Cancel"> 
 		DELETE FROM likeVo WHERE  id = #{id}
	</delete>
	
	
  </mapper>